.tab {
    height: rem(96);
    background: #FFFFFF;
    overflow: hidden;
    overflow-x: auto;
    font-size: 0;
    .tab-li {
        height: rem(96);
        .tab-text {
            height: rem(96);
            line-height: rem(96);
            padding: 0 rem(24);
            font-size: rem(30);
            color: #222222 !important;
        }
    }
    .tab-li.active {
        .tab-text {
            color: #263238 !important;
            box-shadow: inset 0 -2px 0 0 #263238;
        }
    }
}
.tab.tab-flex {
    @include display(flex);
    @include align-items(center);
    .tab-li{
        @include flex(1);
        @include display(flex);
        @include align-items(center);
        @include justify-content(center);
    }
}
.tab::-webkit-scrollbar{
    height: 0;
}
.tab.tab-much{
    white-space: nowrap;
    .tab-li{
        display: inline-block;
        width: 33%;
        text-align: center;
        .tab-text{
            display: inline-block;
        }
    }
}
